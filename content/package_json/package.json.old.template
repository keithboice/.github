{
  "author": "Keith Boice <keith.boice.work@gmail.com>",
  "bugs": {
    "url": "https://github.com/keithboice/template_nodejs/issues"
  },
  "dependencies": {
    "core-js": "^3.8.2",
    "documentation": "^13.1.1",
    "jsdoc-babel": "^0.5.0",
    "regenerator-runtime": "^0.13.7"
  },
  "description": "Starter project repo for new nodejs projects",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/eslint-plugin": "^7.12.1",
    "@babel/node": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-flow": "^7.12.1",
    "@babel/register": "^7.12.10",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "@octokit/core": "^3.2.4",
    "babel-eslint": "^10.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "better-docs": "^2.3.2",
    "chai": "^4.2.0",
    "codecov": "^3.8.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-jsdoc": "^31.0.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "flow-bin": "^0.142.0",
    "flow-coverage-report": "^0.8.0",
    "flow-libdef": "^1.0.12",
    "flow-remove-types": "^2.142.0",
    "flow-typed": "^3.2.1",
    "husky": "^4.3.8",
    "imagemin-lint-staged": "^0.4.0",
    "jsdoc": "^3.6.6",
    "jsdoc-mermaid": "^1.0.0",
    "kb_ci_nodejs": "^1.0.0",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "package_config_babel": "^1.0.1",
    "package_config_flow": "^1.0.2",
    "package_config_prettier": "^1.0.3",
    "pinst": "^2.1.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "watch": "^1.0.2"
  },
  "eslintConfig": {
    "extends": [
      "plugin:flowtype/recommended",
      "plugin:jsdoc/recommended",
      "prettier",
      "prettier/babel",
      "prettier/flowtype",
      "prettier/prettier"
    ],
    "plugins": [
      "@babel",
      "flowtype",
      "jsdoc"
    ],
    "env": {
      "node": true,
      "mocha": true
    }
  },
  "homepage": "https://github.com/keithboice/template_nodejs#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "ISC",
  "lint-staged": {
    "*.{js,jsx}": "run-s clean:lint clean:prettier flow:check flow:coverage flow:rm build test",
    "*.{css,html,gif,jpg,png}": "run-p clean:prettier clean:img"
  },
  "main": "lib/index.js",
  "name": "template_nodejs",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*",
      "node_modules/",
      ".templates/"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-babel",
    "check-coverage": false,
    "report-dir": "./docs/coverage"
  },
  "prettier": "package_config_prettier",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keithboice/template_nodejs.git"
  },
  "scripts": {
    "build": "npm run build:babel",
    "build:babel": "babel --config-file ./node_modules/package_config_babel/.babelrc src/ -d lib/",
    "build:babel-node": "babel-node --config-file ./node_modules/package_config_babel/.babelrc",
    "clean:prettier": "prettier --write --ignore-unknown --ignore-path .gitignore .",
    "clean:lint": "eslint --fix --quiet --cache --ignore-path .gitignore .",
    "clean:img": "imagemin-lint-staged",
    "dev": "run-s build:babel watch:mon",
    "dev:flowrm": "run-s watch flow:rm watch:mon",
    "dev:babel": "run-s build:babel watch:mon",
    "docs": "jsdoc -c ./docs/jsdoc.json",
    "docs:html": "documentation build src/** -f html -o docs/html",
    "docs:md": "documentation build src/** -f md -o docs/md",
    "flow": "flow --flowconfig-name ./src/.flowconfig",
    "flow:check": "flow --flowconfig-name ./src/.flowconfig --quiet",
    "flow:coverage": "flow batch-coverage --flowconfig-name ./src/.flowconfig .",
    "flow:deps": "flow-typed install --packageDir ./ --rootDir ./src",
    "flow:rm": "flow-remove-types src/ -d lib/ --all --pretty",
    "flow:start": "flow status --flowconfig-name ./src/.flowconfig",
    "flow:stop": "flow stop --flowconfig-name ./src/.flowconfig",
    "stage": "lint-staged --quiet",
    "start": "npm run build && node ./lib/",
    "test": "run-s test:unit test:report test:coverage",
    "test:unit": "mocha --config ./node_modules/kb_ci_nodejs/.mocharc.yml lib/**/*.spec.js",
    "test:report": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "test:coverage": "codecov",
    "watch": "watch --wait=1",
    "watch:mon": "nodemon -w ./lib/",
    "watch:js": "run-s flow:check flow:rm test"
  },
  "version": "1.0.0"
}
